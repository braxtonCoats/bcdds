{
  "name": "bcdds",
  "version": "2.0.0",
  "description": "Simple Design System - A React component library with Figma Code Connect integration",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./compositions": {
      "import": "./dist/compositions.js",
      "types": "./dist/compositions.d.ts"
    },
    "./primitives": {
      "import": "./dist/primitives.js",
      "types": "./dist/primitives.d.ts"
    },
    "./layout": {
      "import": "./dist/layout.js",
      "types": "./dist/layout.d.ts"
    },
    "./hooks": {
      "import": "./dist/hooks.js",
      "types": "./dist/hooks.d.ts"
    },
    "./utils": {
      "import": "./dist/utils.js",
      "types": "./dist/utils.d.ts"
    },
    "./icons": {
      "import": "./dist/icons.js",
      "types": "./dist/icons.d.ts"
    },
    "./styles": {
      "import": "./dist/styles/index.css"
    },
    "./styles/*": {
      "import": "./dist/styles/*.css"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "react",
    "design-system",
    "components",
    "figma",
    "code-connect",
    "ui",
    "typescript"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/braxtonCoats/bcdds.git"
  },
  "homepage": "https://github.com/braxtonCoats/bcdds#readme",
  "bugs": {
    "url": "https://github.com/braxtonCoats/bcdds/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "app:dev": "vite",
    "app:build": "tsc && vite build",
    "app:lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "app:preview": "vite preview",
    "storybook": "storybook dev -p 6006 --no-open",
    "storybook:build": "storybook build --output-dir dist/storybook",
    "build": "npm run app:build; npm run storybook:build",
    "build:lib": "vite build --config vite.lib.config.ts && tsc -p tsconfig.lib.json --skipLibCheck --noEmit false || echo 'Type declarations generated with warnings'",
    "prepare": "npm run build:lib",
    "prepublishOnly": "npm run build:lib",
    "script:dev-resources": "cd scripts/dev-resources; node --env-file=../../.env app.mjs; cd -;",
    "script:icons": "cd scripts/icons; node --env-file=../../.env app.mjs --skip-rest-api; cd -;",
    "script:icons:rest": "cd scripts/icons; node --env-file=../../.env app.mjs; cd -;",
    "script:tokens": "cd scripts/tokens; node --env-file=../../.env app.mjs --skip-rest-api; cd -;",
    "script:tokens:rest": "cd scripts/tokens; node --env-file=../../.env app.mjs; cd -;",
    "script:validate-env": "node --env-file=.env scripts/validate-env.mjs",
    "figma:publish": "node --env-file=.env scripts/publish-figma-connect.mjs",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "npm run build:lib && changeset publish"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-organize-imports"
    ]
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "react-aria-components": "^1.10.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@figma/code-connect": "^1.3.10",
    "@react-types/shared": "^3.23.0",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/addon-interactions": "^8.6.12",
    "@storybook/addon-links": "^8.6.12",
    "@storybook/blocks": "^8.6.12",
    "@storybook/manager-api": "^8.6.12",
    "@storybook/react": "^8.6.12",
    "@storybook/react-vite": "^8.6.12",
    "@storybook/test": "^8.6.12",
    "@storybook/theming": "^8.6.12",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "eslint-plugin-storybook": "^0.8.0",
    "prettier-plugin-organize-imports": "^3.2.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^8.6.12",
    "typescript": "^5.0.2",
    "vite": "^6.3.5"
  }
}
